<Window x:Class="WpfImages.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfImages"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="450">
    <StackPanel>
        <Image
            x:Name="myImage"
            MouseUp="Image_MouseUp"
            Width ="200" Source="pack://application:,,,/Images/hunterkiller-babo.png"></Image>
    </StackPanel>
</Window>
<!-- pack://application:,,, 없어도 가능하다-->